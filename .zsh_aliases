alias rakeuns='rake endpoints'
alias flush_arp='sudo arp -d -a'
alias flush_dns='sudo dscacheutil -flushcache'
alias conflicts="grep -n -r '<<<<' *"
alias myip="ifconfig en1 | grep inet | awk '{ print $2 }'"
alias lsof="lsof -i -n -P"

# silver searcher
function ags() {
  local DIR=$PWD
  local SEARCHTERM=$1
  ag --line-numbers --stats $SEARCHTERM $DIR
}

alias fixdirs="find $1 -type d -exec chmod 755 {} +"
alias fixfiles="ag $1 -l --nocolor -v -g "" | xargs -o chmod 644"

alias path='echo -e ${PATH//:/\\n}'
# Stop after sending count ECHO_REQUEST packets #
alias ping='ping -c 5'
# Do not wait interval 1 second, go fast #
alias fastping='ping -c 100 -s.2'
alias ports='netstat -tulanp'

# also pass it via sudo so whoever is admin can reload it without calling you #
alias nginxreload='sudo /usr/local/nginx/sbin/nginx -s reload'
alias nginxtest='sudo /usr/local/nginx/sbin/nginx -t'
alias httpdreload='sudo /usr/sbin/apachectl -k graceful'
alias httpdtest='sudo /usr/sbin/apachectl -t && /usr/sbin/apachectl -t -D DUMP_VHOSTS'

## pass options to free ##
alias meminfo='free -m -l -t'
## get top process eating memory
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'
## get top process eating cpu ##
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'
## Get server cpu info ##
alias cpuinfo='lscpu'
## older system use /proc/cpuinfo ##
alias cpuinfo='less /proc/cpuinfo' ##
## get GPU ram on desktop / laptop##
alias gpumeminfo='grep -i --color memory /var/log/Xorg.0.log'

# git aliases
alias gap='git add -p'
alias gbnm='git branch --no-merged'

# golang aliases
alias goprojects="cd ${GOPATH}/src/github.com/jcarley"

# vagrant
alias v='vagrant'
alias vu='vagrant up'
alias vd='vagrant destroy'
alias vs='vagrant status'

# cucmber aliases
alias cfs='bundle exec cucumber -f stepdefs'
alias cfu='bundle exec cucumber --format usage'

alias candidate_list="esp nimbus -e candidate -c list"
alias candidate_instances="esp nimbus -e candidate -c list_instances -t app -n"
alias candidate_app_destroy="esp nimbus -e candidate -c destroy -t app -n"
alias candidate_app_create="esp nimbus -e candidate -c create -t app -n"
alias candidate_outputs="esp nimbus -e candidate -c outputs"
alias candidate_update_dns="esp nimbus -e candidate -c change_dns -d candidate.espaws.com -t app -n"

alias production_list="esp nimbus -e prod -c list"
alias production_instances="esp nimbus -e prod -c list_instances -t app -n"
alias production_app_destroy="esp nimbus -e prod -c destroy -t app -n"
alias production_app_create="esp nimbus -e prod -c create -t app -n"
alias production_outputs="esp nimbus -e prod -c outputs"
alias production_update_dns="esp nimbus -e prod -c change_dns -d www.espaws.com -t app -n"
